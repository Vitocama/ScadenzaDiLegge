<UserControl x:Class="ScadenzaDiLegge.UserController.MarinaDifesaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.UserController"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="900">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A3568" Offset="0.0"/>
                <!-- grigio chiarissimo -->
                    <GradientStop Color="#0A3568" Offset="0.5"/>
                <!-- grigio medio -->
                    <GradientStop Color="#3A6BA4" Offset="0.1111"/>
                <!-- grigio più scuro -->
            </LinearGradientBrush>
            </StackPanel.Background>
            <Image Source="/Img/marina-logo.png">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="0.14" ScaleY="0.14" />
                </Image.RenderTransform>

            </Image>
        </StackPanel>
            
    </Grid>
</UserControl>
