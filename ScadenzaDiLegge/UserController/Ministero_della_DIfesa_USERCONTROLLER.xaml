<UserControl x:Class="ScadenzaDiLegge.Ministero_della_DIfesa_USERCONTROLLER"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#F2F2F2" Offset="0.0"/>
                <!-- grigio chiarissimo -->
                <GradientStop Color="#D9D9D9" Offset="0.5"/>
                <!-- grigio medio -->
                <GradientStop Color="#C0C0C0" Offset="1.0"/>
                <!-- grigio più scuro -->
            </LinearGradientBrush>
        </Grid.Background>
    
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">

        <Image Source="/Img/ministero-difesa-logo.png" 
   Height="80" 
   HorizontalAlignment="Left" Margin="10,5,0,0">

            <Image.RenderTransform>
                <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
            </Image.RenderTransform>
        </Image>
    </StackPanel>
    </Grid>
</UserControl>
