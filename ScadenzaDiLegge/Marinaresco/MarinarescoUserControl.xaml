<UserControl x:Class="ScadenzaDiLegge.Marinaresco.MarinarescoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.Marinaresco"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <TextBlock Text="MARINARESCO" Style="{DynamicResource HeaderTextBlockBlockStyle}"/>

        <Grid x:Name="Marinaresco" Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" >
                <TextBlock Text="MARINARESCO" Style="{DynamicResource textBlockStyle}" MouseDown="Marinaresco_MouseDown" ></TextBlock>
            </Border>


        </Grid>
    </Grid>
</UserControl>
