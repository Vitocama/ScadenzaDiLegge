<Window x:Class="ScadenzaDiLegge.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScadenzaDiLegge"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None"  
        WindowStartupLocation="CenterScreen" Background="DarkBlue"  
        
        Title="SplashScreen" Height="500" Width="500" 
        
        
        >
    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#3A6BA4" Offset="0.8"/>
                <GradientStop Color="#0A3568" Offset="0.1111"/>
                <GradientStop Color="#0A3568" Offset="0.0"/>

            </LinearGradientBrush>
        </Grid.Background>


        <Image Source="/Img/logo.tif" Stretch="Fill" Width="518" Height="518" HorizontalAlignment="Center" VerticalAlignment="Center"/>



    </Grid>
</Window>
