<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.ComadoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="155"/>
         

        </Grid.RowDefinitions>
        <TextBlock Text="CLASSE COMANDANTI"  Style="{DynamicResource HeaderTextBlockBlockStyle}"/>
        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource BorderStyle}" MouseDown="Bettica_MouseDown">
            <TextBlock Text="BETTICA" Style="{DynamicResource textBlockStyle}"/>
        </Border>

        <Border Grid.ColumnSpan="2"
 Grid.Row="1"
 HorizontalAlignment="Center">

            <Image Source="/Img/Stemma_Marina_ombra.png"
    RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
                </Image.RenderTransform>
            </Image>

        </Border>


        <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource BorderStyle}"  MouseDown="Borsini_MouseDown">
            
            <TextBlock Text="BORSINI" Style="{DynamicResource textBlockStyle}"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource BorderStyle}"  MouseDown="Cigala_MouseDown">
            
            <TextBlock Text="CIGALA F." Style="{DynamicResource textBlockStyle}"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource BorderStyle}"  MouseDown="Foscari_MouseDown">
            <TextBlock Text="FOSCARI" Style="{DynamicResource textBlockStyle}"/>
        </Border>

       


        

    </Grid>
</UserControl>
