<UserControl x:Class="ScadenzaDiLegge.UserController.FuoriSedeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.UserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="CLASSE FUORI SEDE" Style="{DynamicResource HeaderTextBlockBlockStyle}"/>

        <Border 
             Grid.Row="1" Grid.Column="1">
            <Image Source="/Img/Stemma_Marina_ombra.png"
   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
                </Image.RenderTransform>
            </Image>

        </Border>


        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" >
                <TextBlock Text="LEVANZO" Style="{DynamicResource textBlockStyle}" MouseDown="Levanzo_MouseDown" ></TextBlock>
            </Border>
          

        </Grid>


   
</UserControl>
