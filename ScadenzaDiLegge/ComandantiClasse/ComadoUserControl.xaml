<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.ComadoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="155"/>

        </Grid.RowDefinitions>
        <TextBlock Text="CLASSE COMANDANTI"  Style="{DynamicResource HeaderTextBlockBlockStyle}"/>
        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource BorderStyle}" MouseDown="Bettica_MouseDown">
            <TextBlock Text="BETTICA" Style="{DynamicResource textBlockStyle}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource BorderStyle}"  MouseDown="Borsini_MouseDown">
            
            <TextBlock Text="BORSINI" Style="{DynamicResource textBlockStyle}"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource BorderStyle}"  MouseDown="Cigali_MouseDown">
            
            <TextBlock Text="CIGALA" Style="{DynamicResource textBlockStyle}"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource BorderStyle}"  MouseDown="Foscari_MouseDown">
            <TextBlock Text="FOSCARI" Style="{DynamicResource textBlockStyle}"/>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource AggiungiDeleteBordeStyle}" MouseDown="Aggiungi_MouseDown">
            <TextBlock Text="AGGIUNGI" Style="{DynamicResource textBlockStyle}"/>

        </Border>
        <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource AggiungiDeleteBordeStyle}" MouseDown="Delete_MouseDown" Cursor="Hand">
                <TextBlock Text="DELETE" Style="{DynamicResource textBlockStyle}" MouseDown="Delete_MouseDown"/>
            </Border>

        <Image Source="/Img/ministero-difesa-logo.png" VerticalAlignment="Bottom" HorizontalAlignment="Left"></Image>

    </Grid>
</UserControl>
