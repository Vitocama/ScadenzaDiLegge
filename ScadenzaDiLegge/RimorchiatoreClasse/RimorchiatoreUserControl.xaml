<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.RimorchiatoreUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.ClassiUserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="CLASSE RIMORCHIATORE" Style="{DynamicResource HeaderTextBlockBlockStyle}"/>

        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Polifemo_MouseDown" >
            <TextBlock Text="POLIFEMO" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="PortoConte_MouseDown" >
            <TextBlock Text="PORTO CONTE" Style="{DynamicResource textBlockStyle}"></TextBlock>
        </Border>

        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="PortoVenere_MouseDown">
            <TextBlock Text="PORTO VENERE" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource BorderStyle}" MouseDown="RP102_MouseDown">
            <TextBlock Text="RP 102" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource BorderStyle}" MouseDown="Rp112_MouseDown">
            <TextBlock Text="RP 112" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>
        <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource BorderStyle}" MouseDown="Porto123_MouseDown" >
            <TextBlock Text="PORTO 123" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>
        <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource BorderStyle}" MouseDown="Porto130_MouseDown">
            <TextBlock Text="PORTO 130" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>

    </Grid>
</UserControl>
