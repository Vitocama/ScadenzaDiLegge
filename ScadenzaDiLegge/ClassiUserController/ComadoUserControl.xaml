<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.ComadoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.ClassiUserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5" Width="200" Height="100" CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A3568" Offset="0.0"/>

                    <GradientStop Color="#0A3568" Offset="0.5"/>

                    <GradientStop Color="#3A6BA4" Offset="0.1111"/>

                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="5" Width="200" Height="100" CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A3568" Offset="0.0"/>

                    <GradientStop Color="#0A3568" Offset="0.5"/>

                    <GradientStop Color="#3A6BA4" Offset="0.1111"/>

                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5" Width="200" Height="100" CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A3568" Offset="0.0"/>

                    <GradientStop Color="#0A3568" Offset="0.5"/>

                    <GradientStop Color="#3A6BA4" Offset="0.1111"/>

                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="5" Width="200" Height="100" CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A3568" Offset="0.0"/>

                    <GradientStop Color="#0A3568" Offset="0.5"/>

                    <GradientStop Color="#3A6BA4" Offset="0.1111"/>

