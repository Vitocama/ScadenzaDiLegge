<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.CostellazioniUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.ClassiUserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <Grid.RowDefinitions>

            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <TextBlock Text="CLASSE COSTELLAZIONI" Style="{DynamicResource HeaderTextBlockBlockStyle}"/>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Sirio_MouseDown">
                <TextBlock Text="SIRIO" Style="{DynamicResource textBlockStyle}" ></TextBlock>
            </Border>

            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Spica_MouseDown">
                <TextBlock Text="SPICA" Style="{DynamicResource textBlockStyle}"></TextBlock>
            </Border>

           
        </Grid>


    </Grid>
   
</UserControl>
