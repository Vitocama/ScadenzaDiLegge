<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.CassiopeaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.ClassiUserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>


        <TextBlock Text="CLASSE CASSIOPEA" Style="{DynamicResource HeaderTextBlockBlockStyle}"  >
        </TextBlock>


        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Cassiopea_MouseDown">
                <TextBlock Text="CASSIOPEA" Style="{DynamicResource textBlockStyle}" ></TextBlock>
            </Border>

            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Spica_MouseDown">
                <TextBlock Text="SPICA" Style="{DynamicResource textBlockStyle}"></TextBlock>
            </Border>

            <Border Style="{StaticResource BorderStyle}" Grid.ColumnSpan="2" Grid.RowSpan="1" Grid.Row="1" MouseDown="Vega_MouseDown">
                <TextBlock Text="VEGA" Style="{DynamicResource textBlockStyle}" ></TextBlock>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource AggiungiDeleteBordeStyle}" MouseDown="Aggiungi_MouseDown">
                <TextBlock Text="AGGIUNGI" Style="{DynamicResource textBlockStyle}"/>

            </Border>
        <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource AggiungiDeleteBordeStyle}" Cursor="Hand" MouseDown="Delete_MouseDown">
                <TextBlock Text="DELETE" Style="{DynamicResource textBlockStyle}"/>
            </Border>


        
    </Grid>



</UserControl>
