<UserControl x:Class="ScadenzaDiLegge.ClassiUserController.NaviglioMinoreUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.ClassiUserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>

        <RowDefinition Height="150"/>
        <RowDefinition Height="150"/>
        <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <TextBlock Text="CLASSE NAVIGLIO MINORE" Style="{DynamicResource HeaderTextBlockBlockStyle}"/>

            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Linosa_MouseDown" >
            <TextBlock Text="LINOSA" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Panarea_MouseDown">
            <TextBlock Text="PANAREA" Style="{DynamicResource textBlockStyle}"></TextBlock>
        </Border>

        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource BorderStyle}" MouseDown="Salina_MouseDown">
                <TextBlock Text="SALINA" Style="{DynamicResource textBlockStyle}" ></TextBlock>
            </Border>

        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource BorderStyle}" MouseDown="Lipari_MouseDown">
            <TextBlock Text="LIPARI" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource BorderStyle}" MouseDown="Ticino_MouseDown">
            <TextBlock Text="TICINO" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>
        <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource BorderStyle}" MouseDown="Favignana_MouseDown">
            <TextBlock Text="FAVIGNANA" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>
        <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource BorderStyle}" MouseDown="Tirsio_MouseDown">
            <TextBlock Text="TIRSIO" Style="{DynamicResource textBlockStyle}" ></TextBlock>
        </Border>

    </Grid>


    
</UserControl>
