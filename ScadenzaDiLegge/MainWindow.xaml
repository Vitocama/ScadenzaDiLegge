<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScadenzaDiLegge"
        xmlns:ClassiUserController="clr-namespace:ScadenzaDiLegge.ClassiUserController" x:Class="ScadenzaDiLegge.MainWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow"
        Height="700" Width="1210"    
        Closed="Window_Closed"
        >



    <Grid>

        <Grid.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0A3568" Offset="0.0"/>
            <!-- grigio chiarissimo -->
            <GradientStop Color="#0A3568" Offset="0.5"/>
            <!-- grigio medio -->
            <GradientStop Color="#3A6BA4" Offset="0.1111"/>
            <!-- grigio più scuro -->
        </LinearGradientBrush>
        </Grid.Background>



        <!-- Definizione righe principali -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <!-- Header -->
            <RowDefinition Height="80" />
            <!-- Riga opzionale -->
            <RowDefinition Height="524" />
            <!-- Contenuto -->
        </Grid.RowDefinitions>

        <!-- Riga 0: intestazione con UserControl -->
        <Grid Grid.Row="0">
            <local:Ministero_della_DIfesa_USERCONTROLLER />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="577*"/>
                <ColumnDefinition Width="633*"/>
            </Grid.ColumnDefinitions>
            <local:Logo_Marina_USERCONTROLLER Grid.ColumnSpan="2"/>
        </Grid>

        <!-- Riga 2: contenuto principale -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210" />
                <!-- Menu laterale -->
                <ColumnDefinition Width="800" />
                <!-- Area contenuto -->
                <ColumnDefinition Width="210" />

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="2" Grid.Column="0">
                <local:menuLaterare_usersControler Height="520"/>
            </StackPanel>
            <Border Grid.Row="2" Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3A6BA4" Offset="0.8"/>
                        <GradientStop Color="#0A3568" Offset="0.1111"/>
                        <GradientStop Color="#0A3568" Offset="0.0"/>
                        <!-- grigio chiarissimo -->

                        <!-- grigio medio -->

                        <!-- grigio più scuro -->
                    </LinearGradientBrush>
                </Border.Background>
                <ContentControl x:Name="AreaComune" />
            </Border>

            <StackPanel Grid.Column="2">
                <local:MenuLateraleDXUserControl/>
            </StackPanel>



            <ClassiUserController:ComadoUserControl Grid.Column="2" HorizontalAlignment="Left" Height="5751" Margin="200,167,0,0" VerticalAlignment="Top" Width="221"/>
        </Grid>

       


    </Grid>
</Window>