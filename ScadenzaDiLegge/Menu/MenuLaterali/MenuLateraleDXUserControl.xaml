<UserControl x:Class="ScadenzaDiLegge.MenuLateraleDXUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="210">

    <Border BorderBrush="Black" BorderThickness="4,0,0,4" CornerRadius="8,0,0,8" Height="900" >

        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0A3568" Offset="0.0"/>
                <!-- grigio chiarissimo -->
                <GradientStop Color="#0A3568" Offset="0.5"/>
                <!-- grigio medio -->
                <GradientStop Color="#3A6BA4" Offset="0.1111"/>
                <!-- grigio più scuro -->
            </LinearGradientBrush>
        </Border.Background>

        <!-- Griglia del menu (10 voci da 60px) -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="26"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Label x:Name="ScadenzeLabel"  Grid.Row="0" Grid.Column="1" Style="{DynamicResource labelStyle}"  MouseLeave="scadenza_MouseLeave"  MouseEnter="scadenza_MouseEnter" MouseDown="scadenza_MouseDown">SCADENZE</Label>
            <Image x:Name="Scadenza" Source="/Img/port-signW.png" Grid.Column="0" Grid.Row="0"  Margin="4,10,4,10" MouseLeave="scadenza_MouseLeave"  />

            <Label x:Name="SearchLabel"  Grid.Row="1" Grid.Column="1" Style="{DynamicResource labelStyle}" MouseLeave="search_MouseLeave"  MouseEnter="search_MouseEnter" MouseDown="search_MouseDown" >CERCA</Label>
            <Image x:Name="Search" Source="/Img/searchW.png" Grid.Column="0" Grid.Row="1"  Margin="4,10,4,10" MouseLeave="search_MouseLeave"  />


            <Label x:Name="SettingLabel"  Grid.Row="2" Grid.Column="1" Style="{DynamicResource labelStyle}"  MouseLeave="setting_MouseLeave"  MouseEnter="setting_MouseEnter" MouseDown="setting_MouseDown">SETTING</Label>
            <Image x:Name="Setting" Source="/Img/settingsW.png" Grid.Column="0" Grid.Row="2"  Margin="4,10,4,10" MouseLeave="setting_MouseLeave"  MouseEnter="setting_MouseEnter" MouseDown="setting_MouseDown"  />


            <Label x:Name="DeleteLabel"  Grid.Row="3" Grid.Column="1" Style="{DynamicResource labelStyle}"  MouseLeave="delete_MouseLeave"  MouseEnter="delete_MouseEnter" MouseDown="delete_MouseDown">DELETE</Label>
            <Image x:Name="Delete" Source="/Img/settingsW.png" Grid.Column="0" Grid.Row="2"  Margin="4,10,4,10" MouseLeave="delete_MouseLeave"  MouseEnter="delete_MouseEnter" MouseDown="delete_MouseDown"  />

            <Label x:Name="AggiungiLabel"  Grid.Row="4" Grid.Column="1" Style="{DynamicResource labelStyle}"  MouseLeave="aggiungi_MouseLeave"  MouseEnter="aggiungi_MouseEnter" MouseDown="aggiungi_MouseDown">AGGIUNGI</Label>
            <Image x:Name="Aggiungi" Source="/Img/settingsW.png" Grid.Column="0" Grid.Row="4"  Margin="4,10,4,10" MouseLeave="aggiungi_MouseLeave"  MouseEnter="aggiungi_MouseEnter" MouseDown="aggiungi_MouseDown"  />










        </Grid>

    </Border>
</UserControl>
