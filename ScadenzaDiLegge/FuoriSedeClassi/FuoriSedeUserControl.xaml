<UserControl x:Class="ScadenzaDiLegge.UserController.FuoriSedeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge.UserController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <TextBlock Text="CLASSE FUORI SEDE" Style="{DynamicResource HeaderTextBlockBlockStyle}"/>

        <Grid x:Name="LE" Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>



            </Grid.RowDefinitions>
            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}" >
                <TextBlock Text="LEVANZO" Style="{DynamicResource textBlockStyle}" MouseDown="Levanzo_MouseDown" ></TextBlock>
            </Border>
            <Border Grid.Row="1" Grid.Column="2" Style="{DynamicResource AggiungiDeleteBordeStyle}" MouseDown="Aggiungi_MouseDown">
                <TextBlock Text="AGGIUNGI" Style="{DynamicResource textBlockStyle}"/>

            </Border>
            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource AggiungiDeleteBordeStyle}"  Cursor="Hand" MouseDown="Delete_MouseDown">
                <TextBlock Text="DELETE" Style="{DynamicResource textBlockStyle}"/>
            </Border>

        </Grid>


    </Grid>
</UserControl>
