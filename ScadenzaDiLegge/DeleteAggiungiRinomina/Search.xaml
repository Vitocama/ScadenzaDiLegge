<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScadenzaDiLegge.DeleteAggiungiRinomina"
        xmlns:ClassiUserController="clr-namespace:ScadenzaDiLegge.ClassiUserController" x:Class="ScadenzaDiLegge.DeleteAggiungiRinomina.Search"
        mc:Ignorable="d"
        Title="Search" 
        Width="1000" Height="3000"
    >


    <ScrollViewer >

        <Grid>

            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#3A6BA4" Offset="0.8"/>
                    <GradientStop Color="#0A3568" Offset="0.1111"/>
                    <GradientStop Color="#0A3568" Offset="0.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" >
                <TextBlock x:Name="search" Text="RICERCA DATI" Style="{DynamicResource HeaderTextBlockBlockStyle}"  Height="50"  HorizontalAlignment="Center"/>


                <TextBlock Text="ID" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="id" TextWrapping="Wrap" Height="25"
         HorizontalAlignment="Stretch" Style="{DynamicResource texBlockStyle}"
         />
                <TextBlock Text="NAVE"  Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="nave" TextWrapping="Wrap"  Height="25" FontSize="20"
         HorizontalAlignment="Stretch" Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="COMANDO" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="comando" TextWrapping="Wrap"  Height="25" FontSize="20"
         HorizontalAlignment="Stretch" Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="BASE" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="Base" TextWrapping="Wrap" Height="25" FontSize="20"
         HorizontalAlignment="Stretch" Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="VISTO" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="visto" TextWrapping="Wrap"  Height="25" FontSize="20"
         HorizontalAlignment="Stretch" Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="TIPOLOGIA APPARECCHIATURE" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="TipologiaApparecchiature" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
        />

                <TextBlock Text="APPARECCHIATURA SISTEMAZIONE" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="apparecchiaturaSistemazione" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="POSIZIONE" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="Posizione" TextWrapping="Wrap" Height="25" FontSize="20"
         HorizontalAlignment="Stretch" Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="MARCA MODELLO DIMENSIONI" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="MarcaModelloDimensioni" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="TIPO DI ACCERTAMENTO" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="TipoDiAccertamento" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="DATA EFFETTUAZIONE" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="DataEffettuazione" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="VALIDITA ANNI" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="ValiditaAnni" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="PROSSIMA SCADENZA" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="ProssimaScadenza" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="GIORNI MANCANTI ALLA SCADENZA" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="GiorniMancantiAllaScadenza" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
                         
                         
         />

                <TextBlock Text="NOTE" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="note" TextWrapping="Wrap" 
 Height="25" FontSize="20" HorizontalAlignment="Stretch"
 Style="{DynamicResource texBlockStyle}"
 />

                <TextBlock Text="DOCUMENTI CORRELATI" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="DocumentiCorrelati" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="CERTIFICATI" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="certifiCati" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="COLONNA 18" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="column18" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />

                <TextBlock Text="COLONNA 19" Style="{DynamicResource textBlockStyle }"/>
                <TextBox x:Name="column19" TextWrapping="Wrap" 
         Height="25" FontSize="20" HorizontalAlignment="Stretch"
         Style="{DynamicResource texBlockStyle}"
         />


                <Border  Style="{StaticResource BorderStyle}"   MouseDown="Search_MouseDown" VerticalAlignment="Bottom">
                    <TextBlock Text="CERCA" Style="{DynamicResource textBlockStyle}"  MouseDown="Search_MouseDown"  />




                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer >
</Window>
