<Window x:Class="ScadenzaDiLegge.DeleteWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScadenzaDiLegge"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
       

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#3A6BA4" Offset="0.8"/>
                <GradientStop Color="#0A3568" Offset="0.1111"/>
                <GradientStop Color="#0A3568" Offset="0.0"/>
                <!-- grigio chiarissimo -->

                <!-- grigio medio -->

                <!-- grigio più scuro -->
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock   Style="{DynamicResource HeaderTextBlockBlockStyle}" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top">CANCELLA IL DATO</TextBlock>

            <TextBlock    Style="{DynamicResource HeaderTextBlockBlockStyle}" Height="50"> ID</TextBlock>
            <ComboBox x:Name="idComboBox"  Height="70" Width="250" Style="{DynamicResource ComboBoxStyle}"></ComboBox>
            <TextBlock    Style="{DynamicResource HeaderTextBlockBlockStyle}" Height="50" Margin="0,50,0,0"> NAVE</TextBlock>
            <ComboBox x:Name="navComboBox"  Height="70" Width="250" Style="{DynamicResource ComboBoxStyle}"></ComboBox>

            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource BorderStyle}"  Margin="0,50,0,0" MouseDown="Cancella_MouseDown">
                <TextBlock Text="CANCELLA" Style="{DynamicResource textBlockStyle}"  ></TextBlock>
            </Border>
        </StackPanel>

    </Grid>
</Window>
